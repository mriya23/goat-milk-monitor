// Statistics Comparison Page
---

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistics - Goat Milk Monitor</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
            min-height: 100vh;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        h1 {
            color: white;
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5rem;
        }
        .nav-links {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }
        .nav-links a {
            background: white;
            color: #667eea;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 600;
            transition: transform 0.2s;
        }
        .nav-links a:hover {
            transform: translateY(-2px);
        }
        .status {
            background: white;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #10b981;
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        .btn {
            background: #3b82f6;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
        }
        .btn:hover {
            background: #2563eb;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .stat-card h3 {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 10px;
        }
        .stat-value {
            font-size: 2rem;
            font-weight: bold;
            margin: 10px 0;
        }
        .stat-date {
            font-size: 0.85rem;
            color: #999;
            margin-bottom: 5px;
        }
        .trend {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 5px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        .trend.up {
            background: #dcfce7;
            color: #16a34a;
        }
        .trend.down {
            background: #fee2e2;
            color: #dc2626;
        }
        .trend.neutral {
            background: #e5e7eb;
            color: #6b7280;
        }
        .chart-container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .chart-container h2 {
            margin-bottom: 15px;
            color: #333;
            font-size: 1.2rem;
        }
        .chart-wrapper {
            position: relative;
            height: 350px;
        }
        .comparison-table {
            background: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            overflow-x: auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
        }
        th {
            background: #f9fafb;
            font-weight: 600;
            color: #374151;
        }
        tr:hover {
            background: #f9fafb;
        }
        .loading {
            text-align: center;
            padding: 40px;
            color: #666;
        }
        @media (max-width: 768px) {
            h1 {
                font-size: 1.8rem;
            }
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üìä Statistik & Perbandingan</h1>

        <div class="nav-links">
            <a href="/">‚Üê Dashboard</a>
            <a href="/debug">üîç Debug</a>
        </div>

        <div class="status">
            <div>
                <strong>Firebase Status:</strong> <span id="status-text">Loading...</span>
            </div>
            <div style="display: flex; gap: 10px; align-items: center;">
                <div class="status-indicator" id="status-indicator"></div>
                <button class="btn" onclick="loadStatistics()">üîÑ Refresh</button>
            </div>
        </div>

        <div id="content">
            <div class="loading">
                <h3>‚è≥ Loading statistics...</h3>
            </div>
        </div>

        <div id="stats-content" style="display: none;">
            <!-- Latest Statistics -->
            <div class="stats-grid" id="latest-stats"></div>

            <!-- Trend Charts -->
            <div class="chart-container">
                <h2>üìà Tren pH & MQ135</h2>
                <div class="chart-wrapper">
                    <canvas id="trendChart"></canvas>
                </div>
            </div>

            <div class="chart-container">
                <h2>üìä Tren Kualitas (%)</h2>
                <div class="chart-wrapper">
                    <canvas id="qualityTrendChart"></canvas>
                </div>
            </div>

            <!-- Comparison Table -->
            <div class="comparison-table">
                <h2 style="margin-bottom: 15px;">üìã Riwayat Statistik Harian</h2>
                <table id="stats-table">
                    <thead>
                        <tr>
                            <th>Tanggal</th>
                            <th>Total</th>
                            <th>Avg pH</th>
                            <th>Avg MQ135</th>
                            <th>Baik</th>
                            <th>Sedang</th>
                            <th>Buruk</th>
                        </tr>
                    </thead>
                    <tbody id="stats-table-body">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        const FIREBASE_URL = 'https://goat-milk-monitor-default-rtdb.asia-southeast1.firebasedatabase.app';

        let trendChart = null;
        let qualityTrendChart = null;

        async function fetchStatistics() {
            try {
                const response = await fetch(`${FIREBASE_URL}/statistics/daily.json`);
                if (!response.ok) throw new Error('Failed to fetch');
                const data = await response.json();
                return data;
            } catch (error) {
                console.error('Error fetching statistics:', error);
                return null;
            }
        }

        function formatDate(dateStr) {
            const date = new Date(dateStr);
            return date.toLocaleDateString('id-ID', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
        }

        function calculateTrend(current, previous) {
            if (!previous) return { text: '‚Äî', class: 'neutral' };
            const diff = current - previous;
            const percentage = ((diff / previous) * 100).toFixed(1);

            if (Math.abs(diff) < 0.01) {
                return { text: '‚Üí Stabil', class: 'neutral' };
            } else if (diff > 0) {
                return { text: `‚Üë +${percentage}%`, class: 'up' };
            } else {
                return { text: `‚Üì ${percentage}%`, class: 'down' };
            }
        }

        function displayLatestStats(statsArray) {
            const container = document.getElementById('latest-stats');

            if (statsArray.length === 0) {
                container.innerHTML = '<p style="color: #666;">Belum ada data statistik</p>';
                return;
            }

            const latest = statsArray[0];
            const previous = statsArray.length > 1 ? statsArray[1] : null;

            const pHTrend = calculateTrend(latest.avgPH, previous?.avgPH);
            const mq135Trend = calculateTrend(latest.avgMQ135, previous?.avgMQ135);
            const qualityTrend = calculateTrend(latest.goodQualityPercentage, previous?.goodQualityPercentage);

            container.innerHTML = `
                <div class="stat-card">
                    <div class="stat-date">${formatDate(latest.date)}</div>
                    <h3>Rata-rata pH</h3>
                    <div class="stat-value" style="color: #3b82f6;">${latest.avgPH}</div>
                    <div>Range: ${latest.minPH} - ${latest.maxPH}</div>
                    <span class="trend ${pHTrend.class}">${pHTrend.text}</span>
                </div>

                <div class="stat-card">
                    <div class="stat-date">${formatDate(latest.date)}</div>
                    <h3>Rata-rata MQ135</h3>
                    <div class="stat-value" style="color: #10b981;">${latest.avgMQ135}</div>
                    <div>Range: ${latest.minMQ135} - ${latest.maxMQ135}</div>
                    <span class="trend ${mq135Trend.class}">${mq135Trend.text}</span>
                </div>

                <div class="stat-card">
                    <div class="stat-date">${formatDate(latest.date)}</div>
                    <h3>Kualitas Baik</h3>
                    <div class="stat-value" style="color: #10b981;">${latest.goodQualityPercentage}%</div>
                    <div>${latest.goodQuality} dari ${latest.totalReadings} readings</div>
                    <span class="trend ${qualityTrend.class}">${qualityTrend.text}</span>
                </div>

                <div class="stat-card">
                    <div class="stat-date">${formatDate(latest.date)}</div>
                    <h3>Total Pembacaan</h3>
                    <div class="stat-value" style="color: #6366f1;">${latest.totalReadings}</div>
                    <div>
                        <span style="color: #10b981;">‚úì ${latest.goodQuality}</span> /
                        <span style="color: #f59e0b;">‚ö† ${latest.mediumQuality}</span> /
                        <span style="color: #ef4444;">‚úó ${latest.poorQuality}</span>
                    </div>
                </div>
            `;
        }

        function createTrendChart(statsArray) {
            const labels = statsArray.map(s => new Date(s.date).toLocaleDateString('id-ID', { month: 'short', day: 'numeric' }));
            const pHData = statsArray.map(s => s.avgPH);
            const mq135Data = statsArray.map(s => s.avgMQ135);

            if (trendChart) trendChart.destroy();

            const ctx = document.getElementById('trendChart');
            trendChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'pH Level',
                            data: pHData,
                            borderColor: 'rgb(59, 130, 246)',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            yAxisID: 'y',
                            tension: 0.4
                        },
                        {
                            label: 'MQ135',
                            data: mq135Data,
                            borderColor: 'rgb(16, 185, 129)',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            yAxisID: 'y1',
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'pH Level'
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'MQ135 (PPM)'
                            },
                            grid: {
                                drawOnChartArea: false,
                            },
                        },
                    }
                }
            });
        }

        function createQualityTrendChart(statsArray) {
            const labels = statsArray.map(s => new Date(s.date).toLocaleDateString('id-ID', { month: 'short', day: 'numeric' }));
            const goodData = statsArray.map(s => s.goodQualityPercentage);
            const mediumData = statsArray.map(s => s.mediumQualityPercentage);
            const poorData = statsArray.map(s => s.poorQualityPercentage);

            if (qualityTrendChart) qualityTrendChart.destroy();

            const ctx = document.getElementById('qualityTrendChart');
            qualityTrendChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Baik (%)',
                            data: goodData,
                            borderColor: 'rgb(16, 185, 129)',
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            tension: 0.4,
                            fill: true
                        },
                        {
                            label: 'Sedang (%)',
                            data: mediumData,
                            borderColor: 'rgb(245, 158, 11)',
                            backgroundColor: 'rgba(245, 158, 11, 0.1)',
                            tension: 0.4,
                            fill: true
                        },
                        {
                            label: 'Buruk (%)',
                            data: poorData,
                            borderColor: 'rgb(239, 68, 68)',
                            backgroundColor: 'rgba(239, 68, 68, 0.1)',
                            tension: 0.4,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'Persentase (%)'
                            }
                        }
                    }
                }
            });
        }

        function displayTable(statsArray) {
            const tbody = document.getElementById('stats-table-body');

            if (statsArray.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" style="text-align: center; color: #666;">Belum ada data</td></tr>';
                return;
            }

            tbody.innerHTML = statsArray.map(stat => `
                <tr>
                    <td style="font-weight: 600;">${formatDate(stat.date)}</td>
                    <td>${stat.totalReadings}</td>
                    <td>${stat.avgPH}</td>
                    <td>${stat.avgMQ135}</td>
                    <td style="color: #10b981;">${stat.goodQuality} (${stat.goodQualityPercentage}%)</td>
                    <td style="color: #f59e0b;">${stat.mediumQuality} (${stat.mediumQualityPercentage}%)</td>
                    <td style="color: #ef4444;">${stat.poorQuality} (${stat.poorQualityPercentage}%)</td>
                </tr>
            `).join('');
        }

        async function loadStatistics() {
            console.log('Loading statistics...');
            document.getElementById('status-text').textContent = 'Loading...';
            document.getElementById('status-indicator').style.background = '#f59e0b';

            const data = await fetchStatistics();

            if (!data) {
                document.getElementById('status-text').textContent = 'Error loading data';
                document.getElementById('status-indicator').style.background = '#ef4444';
                document.getElementById('content').innerHTML = '<div class="loading"><h3>‚ùå Gagal memuat data statistik</h3><p>Pastikan sudah menjalankan: node save-daily-stats.js</p></div>';
                return;
            }

            // Convert object to array and sort by date (newest first)
            const statsArray = Object.values(data).sort((a, b) => new Date(b.date) - new Date(a.date));

            console.log('Statistics loaded:', statsArray);

            document.getElementById('status-text').textContent = `Loaded ${statsArray.length} day(s) of data`;
            document.getElementById('status-indicator').style.background = '#10b981';

            // Hide loading, show content
            document.getElementById('content').style.display = 'none';
            document.getElementById('stats-content').style.display = 'block';

            // Display all sections
            displayLatestStats(statsArray);
            createTrendChart(statsArray.slice().reverse()); // Reverse for chronological order in chart
            createQualityTrendChart(statsArray.slice().reverse());
            displayTable(statsArray);

            console.log('All statistics displayed successfully!');
        }

        // Auto load on page load
        window.addEventListener('load', () => {
            loadStatistics();
        });

        // Auto refresh every 60 seconds
        setInterval(() => {
            console.log('Auto refresh statistics...');
            loadStatistics();
        }, 60000);
    </script>
</body>
</html>
